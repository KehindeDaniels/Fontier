{
  "manifest_version": 3,
  "name": "Fontier Styler",
  "version": "1.0",
  "description": "A Chrome extension to style selected text directly in the browser.",
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/f16.png",
      "48": "/icons/f48.png",
      "128": "/icons/f128.png"
    }
  },
  "icons": {
    "16": "/icons/f16.png",
    "48": "/icons/f48.png",
    "128": "/icons/f128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
