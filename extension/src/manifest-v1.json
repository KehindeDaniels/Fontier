{
  "manifest_version": 3,
  "name": "Fontier (Dev)",
  "version": "0.0.1",
  "action": {
    "default_title": "Fontier",
    "default_popup": "index.html"
  },
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ]
}
